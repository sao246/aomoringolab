<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>会員情報の編集</h2>
    <%= form_with model:@user, local:true do |f| %>
      <%= render 'layouts/errors', resource: @user %>
      <div class="form-group">
        <%= f.label :name, "アカウント名" %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>

      <div class="form-group">
        <%= f.label :introduction, "自己紹介" %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit "更新します", class: 'btn btn-secondary' %>
      </div>
      <div class="form-group">
        <%= button_to "退会確認ページへ", unsubscribe_user_path(current_user), class: 'btn btn-danger' %>
      </div>
    <% end %>
  </div>
</div>