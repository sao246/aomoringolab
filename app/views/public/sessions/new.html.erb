<h2 class="m-4 text-center"><i class="fa-solid fa-flask-vial" style="color: #218838;"></i>会員ログイン<i class="fa-solid fa-apple-whole" style="color: red;"></i></h2>
<div class="d-flex justify-content-center">
  <div class="col-12 col-sm-8 col-md-6 col-lg-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render 'layouts/errors', resource: @user %>
      
      <div class="field m-4">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="field m-4">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field m-4">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "パスワードを記憶" %>
        </div>
      <% end %>

      <div class="actions m-4">
        <%= f.submit "ログイン", class: "btn w-100", style: "background-color: #87ceed ; color: white;" %>
      </div>
    <% end %>
    <%= render "public/shared/links" %> 
  </div>
</div>
