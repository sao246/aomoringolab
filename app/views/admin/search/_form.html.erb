<%# 検索ボックスフォームの追加 2025/04/16 %>
<% if admin_signed_in? %>
  <i class="fa-solid fa-magnifying-glass" ></i><%= form_with url: search_index_path, method: :get, local: true do |f| %>
    <%= f.text_field :content %>
    <div class="search-button" style="display: flex; justify-content: left; flex-wrap: wrap; margin-top: 20px;">
      <%= f.select :model, options_for_select({ "User" => "user", "Post" => "post" }) %>
      <%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }) %>
      <%= f.submit '検索' %>
    </div>
  <% end %>
<% end %>