<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 class="m-4">管理者情報編集</h2>
      <h5> アカウント名: <%= resource_name.to_s.humanize %></h5>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%# エラー処理 %>
        <%= render 'layouts/errors', resource: @admin %>

        <%# メールアドレス変更フォーム %>
        <div class="field m-4">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        
        <%# 今のところconfirmableは使っていないので非活性（表示もされない）だが、今後のために一旦残しておく。%>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div> 次のメールアドレスは確認中です: <%= resource.unconfirmed_email %></div>
        <% end %>

        <%# パスワード変更フォーム %>
        <div class="field m-4">
          <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> 桁以上で入力ください。変更しない場合はブランクのままにしてください。</em>
          <% end %>
        </div>

        <%# パスワード変更フォーム（確認） %>
        <div class="field m-4">
          <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <%# 現在のパスワード入力フォーム %>
        <div class="field m-4">
          <%= f.label :current_password, "現在のパスワード" %> <br>
          <%= f.password_field :current_password, autocomplete: "current-password" %><br>
          <em>パスワードを変更するには、現在のパスワード入力が必要です。</em><br />
        </div>

        <%# 更新処理 %>
        <div class="actions m-4">
          <%= f.submit "更新する", class: 'btn btn-sm', style: "background-color: #66cdaa ; color: white;" %>
        </div>
      <% end %>
      <%= link_to "<<トップへ戻る", admin_homes_top_path, class: 'btn btn-sm btn-secondary' %>
    </div>
  </div>
</div>