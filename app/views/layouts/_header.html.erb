            </div>
          <%# adminログイン時の設定 %>
          <% elsif admin_signed_in? %>
            <li class="nav-item">
              <%= link_to admin_posts_path, class: 'nav-link text-light' do %>
                <i class="fa-regular fa-newspaper"></i> 投稿一覧
              <% end %>
            </li>
            <li class="nav-item">
              <%=  link_to admin_trends_path, class: 'nav-link text-light', data: { turbolinks: false } do%>
                <i class="fa-solid fa-arrow-trend-up" style="color: #bf6396;"></i> トレンド
              <% end %>
