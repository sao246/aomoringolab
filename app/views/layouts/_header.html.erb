            <li class="nav-item">
              <%= link_to posts_path, class: 'nav-link text-light' do %>
                <i class="fa-regular fa-newspaper"></i> 投稿一覧
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to feed_path, class: 'nav-link text-light' do %>
                <i class="fa-solid fa-square-rss" style="color: #FFD43B;"></i> フィード
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to trend_path(current_user.id), class: 'nav-link text-light', data: { turbolinks: false } do %>
